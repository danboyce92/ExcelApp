int Arc1() {
   
 int output;
 
 std::string enter;
 
 getline (std::cin,enter);
 printf("Joe pranced gingerly out of his bed and threw on his nighty....\n");
 getline (std::cin,enter);
 printf("It was a cold dark night and the wind was howling though the trees....\n");
 getline (std::cin,enter);
 printf("The gyrating branches cast menecing shadows through the half parted curtains in the kitchen....\n");
 getline (std::cin,enter);
 printf("Joe fumbeled in the dark cabinet for a glass....\n");
 getline (std::cin,enter);
 printf("He ran the tap and filled it before greedily gulping it down....\n");
 getline (std::cin,enter);
 printf("As cold liquid flowed down it stung the back of his throat....\n");
 getline (std::cin,enter);
 printf("As it made contact with his tounge he tasted a distinctive yeasty flavour....\n");
 getline (std::cin,enter);
 printf("BLLAAGHH Joe spat out the foul liquid....\n");
 getline (std::cin,enter);
 printf("He knew it wasnt water....\n");
 getline (std::cin,enter);
 printf("Tasted like....\n");
 getline (std::cin,enter);
 printf("1. BEER?\n");
 printf("2. ?\n");
 printf("3. Go back to bed Joe must still be dreaming...?\n");
 
 cin >> output;

 return(output);

}//get water
