int Arc2() {
   
 int output;
 
 std::string enter;
 getline (std::cin,enter);
 printf("Joe tossed and turned in dhebed...\n");
 getline (std::cin,enter);
 printf("He couldnt get the dream man out of his head...\n");
 getline (std::cin,enter);
 printf("A ghostly whisper flowed to him across the dreamscape....\n");
 getline (std::cin,enter);
 printf("Corrrrcrannnnn boiiiiiii.... it hissed\n");
 getline (std::cin,enter);
 printf("Ya sexy wee WEASEL bastard yaaaaaaaa....\n");
 getline (std::cin,enter);
 printf("Joe by this time had assumed a trance-like state and was both frigtnened and aroused....\n");
 getline (std::cin,enter);
 printf("Some of us have to sleep yanoooo he whispered back....\n");
 getline (std::cin,enter);
 printf("Cmeeeereeee taaa meeeee....YA SEXY WEAAAAAASEL....... the voice wailed\n");
 getline (std::cin,enter);
 printf("What does Joe do\n");
 getline (std::cin,enter);
 printf("1. Give in to the spectres demands (whoever he is)?\n");
 printf("2. Refuse the beings advances, tell him GWAY hes a cokehed bawstard and uve ta sleep!\n");
 printf("3. Attack the being, tell him to bring all his ghost mates an youll bring ur one m8 stanley...RITE!\n");
 
 cin >> output;
 
 return(output);

} //dream
